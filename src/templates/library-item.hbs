<li class="conatiner-libary">
    <article>
        <a href="" >
          {{#if poster_path}}
          <img src="https://www.themoviedb.org/t/p/w300{{poster_path}}"
            onerror="this.onerror=null;this.src='https://subscribenow.com.au/time/asia/Solo/Content/Images/noCover.gif'"
            loading="lazy" alt="{{title}}" title="{{title}}" data-id="{{id}}" />
        {{else}}
        <img src="https://i.pinimg.com/originals/74/3d/b2/743db230d891b47c1d8c66b161111b91.jpg"
            loading="lazy" alt="{{title}}" title="{{title}}" data-id="{{id}}" />
        {{/if}}
        </a>
        <div>
            <a href="">
                <h2 data-id="{{id}}">{{title}}</h2>
            </a>
            <div>
                <ul>
                    {{#if customGenres}}
                    {{#each customGenres}}
                    <li><a href="">{{this}}{{#unless @last}},{{/unless}}</a></li>
                    {{/each}}
                    {{else}}<li>N/A</li>
                    {{/if}}
                </ul>
                {{#if year}}
                <p>| {{year}}</p>
                {{else}}<p>| N/A</p>
                {{/if}}
                <p>{{vote_average}}</p>
            </div>
        </div>
    </article>
</li>