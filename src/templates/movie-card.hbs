{{#each this}}
  <li class="movie__item">
      <a class="movie__link" href="./">
          <div class="movie__thumb">
              <img class="movie__img" 
              src="https://image.tmdb.org/t/p/w500{{poster_path}}" 
              alt="" 
              width="274" 
              height="398"
              data-id="{{id}}">
          </div>
          <div class ="movie__text"> 
              <h2 class="movie__title">{{original_title}}</h2>
              <p class="movie__genre">{{genre.name}}<span class="movie__delimiter">|</span>{{release_date}}</p>
          </div>
      </a>
  </li>
{{/each}}